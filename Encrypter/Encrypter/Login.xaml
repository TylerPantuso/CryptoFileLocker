        </Canvas>-->

        <!--<Canvas x:Name="logo"
                Grid.Row="1" Grid.Column="1"
                Height="{Binding ElementName=folderLock, Path=ActualHeight}"
                Margin="0,20">

            <Image x:Name="folderLock"
                   Width="{Binding ElementName=logo, Path=ActualWidth}"
                   Source="Resources/FolderLock.png"/>

            <TextBlock Canvas.Left="16" Canvas.Top="111"
                       FontFamily="Consolas"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#FF2A4737"
                       Text="Crypto File Locker"/>
        </Canvas>-->

        <Border Grid.Row="1" Grid.Column="1"
                BorderThickness="0"
                Background="{StaticResource BackgroundBrush}">
            
        </Border>

        <Border Grid.Row="2" Grid.Column="1"
                Background="#A5000000"
                CornerRadius="8">

            <Grid x:Name="InputGrid"
                  Margin="10"
                  FocusManager.IsFocusScope="True">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <Grid.Resources>

                    <Style x:Key="UsernameInput"
                           TargetType="TextBox"
                           BasedOn="{StaticResource UserInput}">

                        <Setter Property="Template">
                            <Setter.Value>

                                <ControlTemplate TargetType="TextBox">

                                    <Border BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Background="WhiteSmoke">
                                        <ScrollViewer Margin="3,0"
                                                      x:Name="PART_ContentHost"/>
                                        <!--<TextBox x:Name="inputField"
                                                 Margin="3,0"
                                                 BorderThickness="0"
                                                 FontFamily="{TemplateBinding FontFamily}"
                                                 FontSize="{TemplateBinding FontSize}"
                                                 Foreground="{TemplateBinding Foreground}"
                                                 Text="{Binding
                                            Path=Text,
                                            Mode=OneWayToSource,
                                            RelativeSource={RelativeSource TemplatedParent}}"/>-->
                                    </Border>

                                    <!--<ControlTemplate.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter TargetName="inputField"
                                                    Property="FocusManager.FocusedElement"
                                                    Value="{Binding ElementName=inputField}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>-->

                                </ControlTemplate>

                            </Setter.Value>
                        </Setter>

                    </Style>

                    <Style x:Key="PasswordInput"
                           TargetType="PasswordBox"
                           BasedOn="{StaticResource UserInput}">

                        <Setter Property="Template">
                            <Setter.Value>

                                <ControlTemplate TargetType="PasswordBox">

                                    <Border BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Background="WhiteSmoke">
                                        <ScrollViewer Margin="3,0"
                                                      x:Name="PART_ContentHost"/>
                                    </Border>

                                </ControlTemplate>

                            </Setter.Value>
                        </Setter>

                    </Style>

                    <Style x:Key="ButtonStyle"
                           TargetType="Button"
                           BasedOn="{StaticResource UserInput}">

                        <Setter Property="Width" Value="80"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">

                                    <Border BorderBrush="Black"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3"
                                            Background="WhiteSmoke">
                                        <ContentPresenter Margin="3,0"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>

                                    <ControlTemplate.Triggers>

                                    </ControlTemplate.Triggers>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                    </Style>

                    <ControlTemplate x:Key="SyntaxError">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Right"
                                       Foreground="Red"
                                       Text="!"/>
                            <AdornedElementPlaceholder x:Name="SyntaxErrorAdorner"/>
                        </DockPanel>
                    </ControlTemplate>

                </Grid.Resources>

                <TextBlock x:Name="UsernameLabel"
                           Style="{StaticResource text}"
                           Grid.Row="0" Grid.Column="0"
                           Text="Username"/>

                <!-- Removed: LostFocus="UsernameInput_LostFocus" -->
                <TextBox x:Name="UsernameInput"
                         Style="{StaticResource UsernameInput}"
                         Grid.Row="0" Grid.Column="1"
                         Padding="3,0"
                         MaxLength="20">
                </TextBox>

                <TextBlock x:Name="PasswordLabel"
                           Style="{StaticResource text}"
                           Grid.Row="1" Grid.Column="0"
                           Text="Password"/>

                <PasswordBox x:Name="PasswordInput"
                             Style="{StaticResource PasswordInput}"
                             Grid.Row="1" Grid.Column="1"
                             Padding="3,0"/>

                <TextBlock x:Name="ReEnterPasswordLabel"
                           Style="{StaticResource text}"
                           Grid.Row="2" Grid.Column="0"
                           Height="0"
                           Margin="100,0,0,0"
                           Text="Re-Enter"/>

                <PasswordBox x:Name="ReEnterPasswordInput"
                             Style="{StaticResource PasswordInput}"
                             Grid.Row="2" Grid.Column="1"
                             Height="0"
                             Focusable="False"
                             Padding="3,0"/>

                <StackPanel Grid.Row="3" Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Width="Auto"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">

                    <Button x:Name="NewUserButton"
                            Style="{StaticResource ButtonStyle}"
                            Content="New User"
                            Click="NewUserButton_Click"/>

                    <Button x:Name="LoginButton"
                            Style="{StaticResource ButtonStyle}"
                            Content="Login"
                            Click="LoginButton_Click"/>

                </StackPanel>

            </Grid>
        </Border>

    </Grid>
</Window>
